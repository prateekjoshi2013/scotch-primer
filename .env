# Give your app a unique name(no spaces)
APP_NAME=myScotchApp

# false for production,true for development
DEBUG=true

# the port should we listen on
PORT=4000

# the server name, e.g, www.mysite.com 
SERVER_NAME=localhost

# should we use https?
SECURE=false


# database config - postgres or mysql
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASS=password
DATABASE_NAME=scotch
DATABASE_SSL_MODE=disable

# redis config
REDIS_HOST="localhost:6379"
REDIS_PASSWORD=
REDIS_PREFIX=scotch

# cache (currently only redis)
CACHE=redis


# cookie settings
COOKIE_NAME=scotch
COOKIE_LIFETIME=1440
COOKIE_PERSIST=true
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# session store: cookie, redis, mysql, or postgres
SESSION_TYPE=redis

# email settings
SMTP_HOST=localhost
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_PORT=1025
SMTP_ENCRYPTION=none
SMTP_FORM=me@here.com

# mail settings for api services TODO

# template engine: go or jet
RENDERER=jet

# the encryption key; must be exactly 32 chars long
KEY=



